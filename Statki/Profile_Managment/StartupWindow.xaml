<Window x:Class="Statki.Profile_Managment.StartupWindow"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         Title="Startup" Height="400" Width="400" WindowStartupLocation="CenterScreen" 
         Background="#1E1E2F">
    <Grid Margin="10">
        <!-- Title Section -->
        <TextBlock Name="WelcomeText" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Foreground="White" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top" 
                   Margin="0,20,0,40"
                   Text="Welcome to Statki!" />

        <!-- Central Button -->
        <Button Name="ActionButton" 
                Content="Log In" 
                Width="200" 
                Height="50" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                Background="#3E8E41" 
                Foreground="White" 
                FontSize="16" 
                FontWeight="Bold" 
                BorderBrush="#4E4E6E" 
                BorderThickness="1" 
                Cursor="Hand"
                Click="ActionButton_Click" />

        <!-- Edit Profile Button -->
        <Button Name="EditProfileButton" 
                Content="Edit Profile" 
                Width="200" 
                Height="40" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Bottom" 
                Margin="0,0,0,30" 
                Visibility="Collapsed" 
                Background="#2196F3" 
                Foreground="White" 
                FontSize="14" 
                FontWeight="Bold" 
                BorderBrush="#4E4E6E" 
                BorderThickness="1" 
                Cursor="Hand"
                Click="EditProfileButton_Click" />

        <!-- Footer -->
        <TextBlock Text="© 2025 Statki Inc." 
                  FontSize="12" 
                  Foreground="Gray" 
                  HorizontalAlignment="Center" 
                  VerticalAlignment="Bottom" 
                  Margin="0,0,0,5" />
    </Grid>
</Window>
