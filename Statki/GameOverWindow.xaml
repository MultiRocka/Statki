<Window x:Class="Statki.GameOverWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game Over" Height="550" Width="400"
        ResizeMode="NoResize" Background="#1E1E2F">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Tytuł -->
        <TextBlock Text="Game Over" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,20,0,20" Grid.Row="0" />

        <!-- Sekcja główna -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Obrazek wygranej/przegranej -->
            <Image x:Name="ResultImage" Width="150" Height="150" Margin="0,0,0,20" />

            <!-- Tekst wyniku -->
            <TextBlock x:Name="ResultMessage" FontSize="16" FontWeight="Bold" Foreground="White" TextAlignment="Center" Margin="0,10,0,10" />
        </StackPanel>

        <!-- Sekcja przycisków -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <!-- Przycisk Reset -->
            <Button Content="Reset Game" Width="120" Height="40" Background="#3A6EA5" Foreground="White" FontSize="14" FontWeight="Bold" BorderBrush="#4E4E6E" BorderThickness="1"
                    Margin="10,0" Click="ResetGame_Click" />

            <!-- Przycisk Powrót do menu -->
            <Button Content="Exit Game" Width="120" Height="40" Background="#C44E5C" Foreground="White" FontSize="14" FontWeight="Bold" BorderBrush="#4E4E6E" BorderThickness="1"
                    Margin="10,0" Click="ExitGame_Click" />
        </StackPanel>
    </Grid>
</Window>
